generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  clerkUserId     String  @id
  firstName       String
  lastName        String?
  email           String @unique
  quizzes         Quiz[]
  profile         Profile?
}

model Profile{
  id      String @id @default(uuid())
  user    User @relation(fields: [userId],references: [clerkUserId])
  userId  String @unique
}

model Quiz{
  id          String  @id @default(uuid())
  title       String
  questions   Question[]
  createdBy   User    @relation(fields: [userId], references: [clerkUserId])
  userId      String
  totalTime   Int     @default(60)
  totalMarks  Decimal @default(100)
  attempts    Attempt[]
}

enum Status{
  ATTEMPTED
  NOT_ATTEMPTED
  ATTEMPTING
  CHECKING
}

model Attempt{
  id              String  @id @default(uuid())
  quiz            Quiz    @relation(fields: [quizId],references: [id])
  quizId          String
  timeLeft        Int     @default(60)
  marksObtained   Decimal
  status          Status  @default(NOT_ATTEMPTED)
  answers         UserAnswer[]
}

model Question{
  id      String @id @default(uuid())
  quizId  String
  quiz    Quiz @relation(fields: [quizId],references: [id])
  que     String
  type    Question_Type
  options Option[]
  marks   Decimal @default(1)
  answers  UserAnswer[] // user can attempt manytimes
}

enum Question_Type{
  SUBJECTIVE
  MCQ
}

model Option{
  id        String    @id @default(uuid())
  text      String
  question  Question  @relation(fields: [queId],references: [id])
  queId     String
  isCorrect Boolean    @default(false)
  answers    UserAnswer[] // user can attempt many times
}

model UserAnswer {
  id         String   @id @default(uuid())
  attemptId  String
  attempt    Attempt  @relation(fields: [attemptId], references: [id])
  questionId String
  question   Question @relation(fields: [questionId], references: [id])
  optionId   String?
  option     Option?  @relation(fields: [optionId], references: [id])
  answerText String?  // for paragraph answers
}


